
<%= simple_form_for(@quiz, wrapper: :horizontal_form,
  wrapper_mappings: {
    boolean:       :horizontal_boolean,
    check_boxes:   :horizontal_collection,
    date:          :horizontal_multi_select,
    datetime:      :horizontal_multi_select,
    file:          :horizontal_file,
    radio_buttons: :horizontal_collection,
    range:         :horizontal_range,
    time:          :horizontal_multi_select,
    select:        :horizontal_select
  }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :subject, collection: ['Math', 'Science', 'History', 'Geography'], selected: 'Math' %>
    <%= f.input :topic %>
    <%= f.input :level, label: 'Grade Level', collection: 1..12, selected: 2 %>
    <%= f.input :difficulty, collection: ['Easy', 'Medium', 'Hard'], selected: 'Medium' %>
    <%= f.input :objectives  %>
    <%= f.input :format, collection: ['Multiple-choice', 'Fill-in-the-blank', 'Open-response'], selected: 'Multiple-choice' %>
    <%= f.input :numberOfQuestions, label: 'Number of questions', collection: 1..5 %>

    <%= f.button :submit, class:'btn btn-primary' %>
  </div>

<% end %>
