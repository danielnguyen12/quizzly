<p style="color: green"><%= notice %></p>

<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Quiz Creator</h1>
      <p class="lead text-muted">Click the link below to make a new quiz. </p>
      <p>
        <%= link_to "New quiz", new_quiz_path, class:"btn btn-secondary my-2" %>
      </p>
    </div>
  </div>
</section>

<div class="bg-light py-5">
  <div class="container">
    <div class="row">
      <% @quizzes.each do |quiz| %>
        <%= render 'preview', quiz: quiz %>
      <% end %>
    </div>
  </div>
</div>